<article>
    <h2>{{data.post.title}}</h2>
    <img src="{{data.post.featureImage}}" alt="Feature Image">
    <br /><br />
    {{{safeHTML data.post.body}}}
    <br /><br />
    <p>Category: {{data.post.category}}</p>
    <p>Price: {{data.post.price}}</p>
    <p>Last Updated: {{data.post.postDate}}</p>
    <br /><br />

    {{#if data.items}}
    <h4>Items</h4>
    <ul>
        {{#each data.items}}
        <li><a href="/shop/{{this._id}}?category={{../viewingCategory}}">{{this.title}}</a></li>
        {{/each}}
    </ul>
    {{/if}}

    {{#if data.categories}}
    <h4>Categories</h4>
    <ul>
        {{#each data.categories}}
        <li><a href="/shop?category={{this._id}}">{{this.categoryName}}</a></li>
        {{/each}}
    </ul>
    {{/if}}

    {{#if data.post}}
    <div class="item" itemscope itemtype="http://schema.org/IndividualProduct">
        <!-- Your existing item details markup goes here -->
    </div>
    {{else}}
    <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
    </div>
    {{/if}}
</article>